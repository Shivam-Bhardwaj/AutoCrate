modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AutoCrate Development Server"

[[workflows.workflow]]
name = "AutoCrate Development Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NEXT_SWC_DISABLE_NATIVE=1 NEXT_DISABLE_TURBOPACK=1 WATCHPACK_POLLING=true CHOKIDAR_USEPOLLING=1 next dev --port 5000 --hostname 0.0.0.0"
