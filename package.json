{
  "name": "autocrate",
  "version": "2.0.0-production",
  "description": "Industrial shipping crate design tool with NX CAD integration for Applied Materials",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:component": "playwright test --config=playwright.config.ts --grep @component",
    "test:visual": "playwright test --config=playwright.config.ts --grep @visual",
    "test:all": "npm run test && npm run test:e2e",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "validate:release": "node scripts/agents/release-hardcode-check.mjs",
    "setup:admin": "powershell -ExecutionPolicy Bypass -File scripts/setup-admin-powershell.ps1",
    "vercel:setup": "npm install -g vercel && vercel login && vercel link && vercel domains add autocrate.shivambhardwaj.com",
    "vercel:deploy": "vercel --prod"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.180.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "playwright-core": "^1.55.0",
    "tailwindcss": "^4",
    "test-exclude": "^7.0.1",
    "typescript": "^5"
  },
  "overrides": {
    "glob": "^10.4.5"
  }
}
